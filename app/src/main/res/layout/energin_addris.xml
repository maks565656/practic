<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/pricolblac"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/montserrat_700"
            android:textColor="@android:color/white"
             android:textSize="@dimen/font_size"
            android:text="Добавьть адрес" />
    </LinearLayout>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginTop="200dp"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView6"
        android:fontFamily="@font/montserrat_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Добавьте адрес своего дома \n г. Название города, ул. Название улицы, д. \n Номер города" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:textColor="@android:color/darker_gray"
        android:background="@drawable/text_linial"
        android:gravity="center_vertical"
        tools:text="Адрес"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="197dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:textSize="@dimen/font_siz2"
        android:onClick="cave"
        android:fontFamily="@font/montserrat_700"
        android:theme="@style/blue_btr"
        android:text="Сохранить"
        app:cornerRadius="10dp" />
</LinearLayout>


</RelativeLayout>