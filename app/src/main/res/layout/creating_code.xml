<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scrin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7E30CCE1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/iconhome" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="Создайте\n пин-код"/>
        <TableRow
            android:id="@+id/bottonc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/botton1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/botton" />
            <ImageView
                android:id="@+id/botton2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/botton" />
            <ImageView
                android:id="@+id/botton3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/botton" />
            <ImageView
                android:id="@+id/botton4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/botton" />
        </TableRow>
<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#9C30CCE1"
    android:layout_marginTop="20dp"
    android:layout_gravity="center">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@drawable/botton_blac"
            android:text="1"
            android:textSize="@dimen/font_size"
            android:layout_margin="10dp"
            android:textColor="@color/black" />

        <Button
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@drawable/botton_blac"
            android:text="2"
            android:textSize="@dimen/font_size"
            android:layout_margin="10dp"
            android:textColor="@color/black" />

        <Button
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@drawable/botton_blac"
            android:text="3"
            android:textSize="@dimen/font_size"
            android:layout_margin="10dp"
            android:textColor="@color/black" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <Button
            android:layout_height="70dp"
            android:layout_width="90dp"
            android:text="4"
            android:textSize="@dimen/font_size"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:background="@drawable/botton_blac"/>
        <Button
            android:layout_height="70dp"
            android:layout_width="90dp"
            android:text="5"
            android:textSize="@dimen/font_size"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:background="@drawable/botton_blac"/>
        <Button
            android:layout_height="70dp"
            android:layout_width="90dp"
            android:text="6"
            android:textSize="@dimen/font_size"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:background="@drawable/botton_blac"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <Button
            android:layout_height="70dp"
            android:layout_width="90dp"
            android:text="7"
            android:textSize="@dimen/font_size"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:background="@drawable/botton_blac"/>
        <Button
            android:layout_height="70dp"
            android:layout_width="90dp"
            android:text="8"
            android:textSize="@dimen/font_size"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:background="@drawable/botton_blac"/>
        <Button
            android:layout_height="70dp"
            android:layout_width="90dp"
            android:text="9"
            android:textSize="@dimen/font_size"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:background="@drawable/botton_blac"/>
    </TableRow>
</TableLayout>


    </LinearLayout>
</RelativeLayout>