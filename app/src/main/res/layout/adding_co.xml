<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/pricolblac"
        android:gravity="center">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/button3"
                android:layout_margin="10dp"
                android:background="@drawable/exit" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_700"
                android:layout_margin="10dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_siz2"
                android:text="Добавьть комнату" />
        </TableRow>

    </LinearLayout>

    <EditText
        android:id="@+id/ssaq"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="574dp"
        android:background="@drawable/text_linial"
        android:gravity="center_vertical"
        tools:text="Название комнаты" />

    <TableLayout
        android:layout_width="113dp"
        android:layout_height="99dp"
        android:layout_alignStart="@+id/ssaq"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="129dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="364dp"
        android:gravity="center">

    </TableLayout>


</RelativeLayout>