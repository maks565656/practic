<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="218dp"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-217dp"
        android:layout_marginBottom="232dp"
        android:layout_toStartOf="@+id/button3"
        android:background="@drawable/groub" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button6"
        android:layout_width="54dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="335dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/pli"/>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/pricolblac"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_700"
                android:text="Твой дом"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_siz2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="20dp"
                android:background="@drawable/botton_nast"
                app:cornerRadius="10dp" />
        </TableRow>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/montserrat_700"
            android:textSize="@dimen/font_siz15"
            android:text="Омск" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_700"
            android:text="Комнаты"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_siz2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/a" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="218dp"
        android:layout_height="81dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="417dp"
        android:background="@drawable/gost" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="218dp"
        android:layout_height="81dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-217dp"
        android:layout_marginBottom="322dp"
        android:layout_toStartOf="@+id/button3"
        android:background="@drawable/cux" />

</RelativeLayout>